[include]
  path = ~/.gitconfig.local
[commit]
  gpgSign = true
[core]
  excludesfile = ~/.gitignore_global
  quotepath = false
[fetch]
  prune = true
[init]
  defaultBranch = master
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = upstream
[tag]
  sort = version:refname
