[include]
  path = ~/.gitconfig.local
[core]
  excludesfile = ~/.gitignore
  quotepath = false
[push]
  default = upstream
[fetch]
  prune = true
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
